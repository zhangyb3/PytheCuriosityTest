.ask_operation_zone{
    height: 50px;
    display: flex;
    flex-direction: row;
    
}

.ask_operation_zone>text {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: #A9A9A9;
}

.ask_operation_zone>text:not(:first-child) {
    border-left: 1px solid #EEE;
}

.ask_operation_zone>text:before {
    content: '';
    display: block;
    width: 18px;
    height: 18px;
    margin-right: 2px;
    position: relative;
    bottom: 1px;
    background-position: 0 0;
    background-repeat: no-repeat;
}


.record_sound:before{
    background-image: url(../../images/money.png);
    background-size: 18px; 
}

