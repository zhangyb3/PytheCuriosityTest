
.draw_picture_section_cover {
    position: fixed;
    background-color: white;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 10;
    opacity: 1;
}

.draw_picture_section{
    z-index: 14;
    position: fixed;
    top: 0px;
    left: 0;
    right: 0;
    bottom: 0px;
    
    /*align-items: center;*/
}

.canvas_container {

    width: 100%;

    height: 100%;

    display: flex;

    flex-direction: column;

}

.canvas_area {

    background-color: white;

    width: 100%;
    height: 80%;

    flex: 1;

}

.draw_canvas{
    width: 100%;
    height: 100%;
}

.canvas_tools {

    margin-top: 10px;
    background-color: #3AA4F1;

    width: 100%;
    height: 40px;

    /*position: fixed;*/

    /*bottom: 0;*/

    display: flex;

    justify-content: space-between;

    align-items: center;

}

.red_pen {

    background-color: red;
    color: white;
    margin-left: 10px;
}

.black_pen {

    background-color: black;
    color: white;
    margin-right: 10px;
}

.eraser {

    background-color: white;
    color: black;
}

.canvas_cancel_button{
    /*margin-top: 5px;*/
    margin-left: 10px;
    /*margin-bottom: 5px;*/
    background-color: #3AA4F1;
    border-radius: 4px;
    line-height: 30px;
    width: 40px;
    color: white;
}

.canvas_confirm_button{
    /*margin-top: 5px;*/
    /*padding-top: 5px;*/
    margin-right: 10px;
    background-color: #3AA4F1;
    border-radius: 4px;
    line-height: 30px;
    width: 40px;
    color: white;
    text-align: center;
}

.canvas_confirm {
    margin-top: 5px;
    margin-bottom: 5px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    
    background-color: white;

    width: 100%;
    height: 30px;
    text-align: center;

}