/* pages/personal/personal.wxss */

.personal_page{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    
    display: flex;
    flex-direction: column;
    background-color: #ECEBF4;
}

.personal_description_zone{
    /*border-color: gray;*/
    /*border-style: solid;*/
    /*border-width: 1px;*/

    display: flex;
    flex-direction: row;
    background-color: white;

    height: 100px;
    width: 100%;
}

.personal_description_image_zone{
    height: 100%;
    width: 20%;
    /*justify-content: space-around;*/
    /*align-items: center;*/
    /*align-content: center;*/
    position: relative;
}

.personal_avatar_container{
    width: 50px;
    height: 50px;
    margin: auto;
    
}

.personal_avartar_image{
    width: 100%;
    height: 100%;

}

.personal_description_text_zone{
    height: 100%;
    width: 75%;
    
    display: flex;
    flex-direction: column;
}

.personal_nick_name{
    font-size: 24px;
}

.personal_summary{
    font-size: 18px;
}

.personal_description_revise_zone{
    height: 100%;
    width: 5%;

    align-items: center;
}

.personal_operation_zone{
    margin-top: 10px;
    width: 100%;

    display: flex;
    flex-direction: column;
    background-color: white;
    
}

.personal_operation_item{
    width: 100%;
    display: flex;
    flex-direction: row;

    border-bottom-style: solid;
    border-bottom-color: lightgray;
    border-width: 1px;
}

.personal_ask personal_operation_item{

    background: black;
}

.personal_operation_item_text{
    width: 90%;
    height: 30px;
    font-size: 18px;
    
}

.about_us_zone{
    margin-top: 10px;
    width: 100%;

    display: flex;
    flex-direction: column;
    background-color: white;
    
}

@import "../register/register.wxss";
    

