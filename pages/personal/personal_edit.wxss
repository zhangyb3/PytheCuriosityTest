/* pages/personal/personal_edit.wxss */

.nickname_zone{
    display: flex;
    flex-direction: row;
    align-items: center;
    /*justify-content: center;*/
    width: 100%;
    height: 50px;
}

.nickname_wrap{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 10px;
    width: auto;
    height: auto;
}

.nickname_content_text_input{
    height: 30px;
    width: 75%;
    
    border-style: solid;
    border-width: 1px;
    border: 1px solid #3AA4F1;
    /*font-family: 黑体;*/
    color: #0B0B0B;
    /*border-radius: 22px;*/
    display: flex;
    flex-direction: row;
    margin-left: 5px;
    /*justify-content: space-around;*/
    align-items: center;
    
    /*margin:2px 5px;*/
    text-align: center;
    
    background-color: white;
    background-size: 18px 18px;
    background-position: center left 10px;
    font-size: 15px;

}

.description_content_zone{
    display: flex;
    flex-direction: column;
    margin-left: 10px;
    margin-top: 10px;
}

.description_content_text_input {
    display: flex;
    flex-direction: row;
    border: 1px solid #3AA4F1;
    height: 250px;
    font-size: 16px;
    overflow-x: auto; 
    overflow-y: visible;
    color: #0B0B0B;
    margin-top: 5px;
}

.edit_commit_confirm{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.edit_commit_button{
    width: 80%;
    line-height: 30px;
    margin-top: 50px;
    background-color: #3AA4F1;
}
