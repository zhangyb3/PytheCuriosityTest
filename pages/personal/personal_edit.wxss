/* pages/personal/personal_edit.wxss */

.person_zone{
    position: fixed;
    background-color: #f3f1e4;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
}

.nickname_zone{
    display: flex;
    flex-direction: row;
    align-items: center;
    /*justify-content: center;*/
    width: auto;
    height: 50px;
    margin-top: 70rpx;
    /*margin-left: 14rpx;*/
}

.nickname_wrap{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 30rpx;
    width: auto;
    height: auto;
}

.nickname_content_text_input{
    height: 30px;
    width: 85%;
    
    /*border-style: solid;
    border-width: 1px;*/
    
    border-bottom: 1px solid #CCCCCC;
    /*font-family: 黑体;*/
    color: #0B0B0B;
    /*border-radius: 22px;*/
    display: flex;
    flex-direction: row;
    margin-left: 5px;
    /*justify-content: space-around;*/
    align-items: center;
    
    /*margin:2px 5px;*/
    text-align: left;
    
    /*background-color: white;*/
    /*background-size: 18px 18px;
    background-position: center left 10px;*/
    font-size: 30rpx;

}

.description_content_zone{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    margin-top: 70rpx;
    align-items: center;
}

.description_content_text_input {
    display: flex;
    flex-direction: row;
    border: 1px solid #CCCCCC;
    height: 150px;
    font-size: 30rpx;
    /*overflow-x: auto; 
    overflow-y: visible;*/
    width: 90%;
    padding: 20rpx;
    color: #333333;
    text-align: left;
    margin-right: 30rpx;
    margin-top: 40rpx;
    border-radius: 10rpx;
    background-color: #fff;
}


.edit_commit_confirm{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.edit_commit_button{
    width: 90%;
    line-height: 92rpx;
    margin-top: 50px;
    -webkit-text-fill-color: #ffffff;
    font-size: 36rpx;
    background-color: #d2cea9;
}

.title_wrap{
    width: 100%;
    height: auto;
}
.title{
    color: #333333;
    font-size: 30rpx;
    width: 160rpx;
    text-align: left;
}
