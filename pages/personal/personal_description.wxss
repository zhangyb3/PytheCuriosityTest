page{

    background-color: #f3f1e4;

}

.personal_description_page{

    background-color: #f3f1e4;
    width: 100%;
    height: 100%;

}

.personal_description_item_container{

    background-color: white;
    width: 100%;
    height: auto;

    justify-content:center;
    align-items:center;
    display:-webkit-flex;

}

.personal_description_item_wrapper{

    /*min-height: 120rpx;*/
    width: 90%;
    height: 50%;
    
    border-bottom: 1rpx solid lightgrey;

}

.personal_description_item{

    display: flex;
    flex-direction: row;
    align-items: center;

}

.item_hint_container{

    width: 25%;
    height: 100%;

}

.item_hint{

    float: left;
    justify-content:center;
    align-items:center;
    display:-webkit-flex;

}

.item_hint_text{

    height: 50%;
    font-size: 36rpx;
    font-weight: bold;
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;

}

.item_content_container{

    width: 75%;
    height: 100%;

}

.item_content{

    float: right;
    justify-content:center;
    align-items:center;
    display:-webkit-flex;

}

.item_content_text{

    height: 50%;
    font-size: 45rpx;
    font-weight: bold;
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    color: grey;
}

.item_content_text_null{

    height: 50%;
    font-size: 45rpx;
    font-weight: bold;
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    color: lightgrey;
}

.item_content_avatar{

    width: 150rpx;
    height: 150rpx;

}