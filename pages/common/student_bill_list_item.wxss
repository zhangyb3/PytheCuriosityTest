

.list_item{
    width: 100%;
    height: 150rpx;

    justify-content:center;
    align-items:center;
    display:-webkit-flex;
}

.student_bill_list_item_container{

    width: 100%;
    height: 80%;
    display: flex;
    flex-direction: row;
    align-items: center;

    border-bottom: 1px solid #EEE;
    background-color: white;
}

.bill_time_container{
    width: 15%;

    justify-content:center;
    align-items:center;
    display:-webkit-flex;
}

.bill_time_text_view{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.bill_money_container{
    width: 25%;

    justify-content:center;
    align-items:center;
    display:-webkit-flex;
}

.bill_money_text_view{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.reward_img{
    width: 50rpx;
    height: 50rpx;
}

.bill_link_container{
    width: 10%;

    justify-content:center;
    align-items:center;
    display:-webkit-flex;
}

.bill_source_container{
    width: 50%;
    
    /*justify-content:center;
    align-items:center;
    display:-webkit-flex;*/
}

.bill_source_text_view_container{
    margin-left: 50rpx;
}

.bill_source_text_view{
    display: flex;
    flex-direction: row;
    align-items: center;
    float: left;
}

.student_avatar{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
}