.personal_question_answer_complain{
    width: 100%;
    height: 40px;
    display: flex; 
    flex-direction: row;
    position: relative;
    justify-content: space-between;
}

.complain_container{
    display: flex;
    position: relative;
    width: 74px;
    height: 30px;
    line-height:20px;
    /*border:1px solid #666;*/
    color:#666;
    border-radius:2px;
    text-align:center;
    font-size:16px;
    margin: 5px 0 5px 10px;
}

.complain_image{
    display: flex;
    position: relative;
    width: 40px;
    height: 18px;
}

.complain_container_cur{
    font-size: 14px;
    color:#3AA4F1;
    /*border:1px solid #3AA4F1;*/
}



.answer_selector_container{
    width: 22px;
    height: 22px;
    position:absolute;
    top:2px;
    right:0px;
}

.answer_selector_image{
    width: 20px;
    height: 20px;
    margin-right: 10px;
    margin-top: 5px;

}

.personal_question_answer_content{
    height: 70%;
    width:100%;
    display: flex;
    flex-direction: column;
    margin:0 auto;

}

.personal_question_answer_text{
    font-size: 36rpx;
    color:#333333;
    height:auto;
    margin-left: 10px;
    margin-right: 10px;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}



.personal_question_answer_selector{
    height: 25px;
