.org_name_wrap{
    
    height: 120rpx;
    line-height:40rpx;
    width: 100%;

    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.org_name {
    
    color: #0F0F0F;
    
    font-size: 36rpx;  
    font-weight: 600; 
}

.org_address_wrap{
    height: 30rpx;
    line-height:30rpx;
    width: 100%;

    display: flex;
