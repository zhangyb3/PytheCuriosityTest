    align-items: center;
}

.org_address_icon{

    width: 30rpx;
    height: 30rpx;

    justify-content:center;
    align-items:center;
    display:-webkit-flex;
}

.org_address_icon image{
    width: 30rpx;
    height: 30rpx;
}

.org_address_text_container{
    height: 100%;
    line-height: 30rpx;
    width: 90%;

    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.org_address_text{
    font-size: 26rpx;
    color: gray;
