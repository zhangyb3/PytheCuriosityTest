
.answer_list-item{
    width:100%;
    border-top: 1px solid #EEE;
    border-bottom: 1px solid #EEE;
    height:auto;
    display: flex;
    flex-direction: column;
    background-color: white;
}

.answer_question_container{
    display: flex;
    flex-direction: column;
    height: auto;
    width: 100%;
    border-bottom: 1px solid #EEE;

}

.answer_question_content{
    display: flex;
    flex-direction: row;
    /*width:100%;*/
    margin-top: 30rpx;
    min-height: 150rpx;
    margin-left: 20rpx;
    margin-right: 20rpx; 
    font-size: 28rpx; 
    color: #333333;
    overflow-x:hidden;
    background-color: #FFFFFF;
    /*overflow-y:auto;*/
}

answer_questin_content{
    width:100%;
    height:120rpx;
    background-color: #FFFFFF;
}

answer_tab_white{
    width:100%;
    height:20rpx;
    background-color: #FFFFFF;
}


.answer_lines{
    width:98%;
    height:70px;
    margin:0 auto;
    overflow-x:hidden;
    overflow-y:auto;
}

.answer_question_bottom{
    display: flex;
    flex-direction: row;
    height:30px;
    width:100%;
    line-height:30px;
    color:#c8c8c8;
    font-size:16px;
    position:relative;
    justify-content: space-between;
}

.answer_money_number{
    height:100%;
    display:flex;
    margin-left: 20rpx;

}

.answer_money_number image{
    padding-top: 16rpx;
    width:37rpx;
    height:33rpx;
    
    /*margin:4px 5px 4px 10px;*/
}

._answer_money_star{
    height:100%;
    display:flex;
    margin-right: 20rpx;
}
._answer_money_star image{
    padding-top: 10rpx;
    height:33rpx;
    width:30rpx;
    margin:4px 0 4px 5px;
}

.collect_number_text{
    margin-left: 10rpx;
    font-size: 26rpx;
    color: #999999;
}

.preview_img_classic{
    width: 30px;
    height: 30px;

}


