
.answer_list-item{
    width:100%;
    border-top: 1px solid #EEE;
    border-bottom: 1px solid #EEE;
    height:auto;
    display: flex;
    flex-direction: column;
    background-color: white;
}

.answer_question_container{
    display: flex;
    flex-direction: row;
    height: auto;
    width: 100%;
    /*border-bottom: 1px solid #EEE;*/

}

.preview_img_classic_dashed_wrap{
    margin-top: 20rpx;
    margin-left: 30rpx;
    width: 156rpx;
    height: 156rpx;
    border: 1px #999999 dashed;
}

.answer_questin_content_wrap{
    display: flex;

     margin-left: 20rpx;
     width: 68%;
    /*right: 30rpx;*/
    /*height: 130rpx;*/

    flex-direction: column;
    text-align: left;
    height: 156rpx;
    margin-top: 20rpx;
}

.answer_question_content_box{
    height: 110rpx;
}

.answer_question_content{
    display: flex;
    font-size: 32rpx;
    color: #333333;
   text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;

}


answer_tab_white{
    width:100%;
    height:20rpx;
    background-color: #FFFFFF;
}


.answer_lines{
    position: fixed;
    left: 216rpx;
    right: 30rpx;
    /*height: 130rpx;*/

    flex-direction: column;
    text-align: left;
    height: 156rpx;
    margin-top: 10rpx;
}

.answer_question_bottom{
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
    height:40rpx;
    width:100%;
    line-height:30px;
    color:#c8c8c8;
    font-size:16px;
    position:relative;
    justify-content: space-between;
}

.answer_money_number{
    height:100%;
    display:flex;
