<template name="index_page_filter">

<view class="input_filter" >

    <view class="subject_view" >
        <button class="subject_button"
         bindtap='filterSubject'> <image src="../../images/index_icon_kemu@2x.png"></image></button>
         <text class="subject_name">科目</text>
    </view>

    <view class="input_view" >
        <input class="input" type="text" placeholder="查询知识点" bindinput="listenerSearchInput" ></input>
    </view>

    <view class="search_button_view" >
        <button class="search_button"    bindtap='getSearchContentList'><image src="../../images/index_icon_serch@2x.png"></image></button>
        <text class="subject_name">搜索</text>
    </view>

</view>

</template>