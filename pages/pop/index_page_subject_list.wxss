/* 顶部排序 */

.top-filter {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    padding: 10px;
    z-index: 10;
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #EEE;
    /*z-index: 10;*/
    background-color: #FFF;
}

.top-filter>.filter-item {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #A9A9A9;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.top-filter>.filter-item:not(:first-child) {
    border-left: 1px solid #EEE;
}

.top-filter>.filter-item:last-child {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.top-filter>.filter-item:last-child:after {
    content: '';
    position: relative;
    left: 4px;
    bottom: 2px;
    width: 32rpx;
    height: 32rpx;
    background: url(http://wx.wg-global.com/Public/images/ss_icon.png) 0 0 no-repeat;
    background-size: 18px 18px;
}

.filter-order {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 16rpx;
    margin-left: 5px;
}

.filter-order>view {
    width: 8px;
    height: 8px;
    background-position: 0 0;
    background-repeat: no-repeat;
}

.filter-order>view:first-child {
    background-image: url(http://wx.wg-global.com/Public/images/xs_wd.png);
    background-size: 8px;
}

.filter-order>view:nth-child(2) {
    background: url(http://wx.wg-global.com/Public/images/xx_wd.png);
    background-size: 8px;
}


/*desc*/

.filter-order-desc>view:nth-child(2) {
    background: url(http://wx.wg-global.com/Public/images/xx_dh.png);
    background-size: 8px
}


/*asc*/

.filter-order-asc>view:first-child {
    background: url(http://wx.wg-global.com/Public/images/xs_dh.png);
    background-size: 8px;
}




.subjects {
    background-color: #f3f1e4;
    z-index: 11;
    width: 100%;
   
    align-items: center;
}

.subjects>input {
    background-color: #dedede;
