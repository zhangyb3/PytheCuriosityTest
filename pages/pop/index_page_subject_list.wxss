.filter-tag-wrapper {
    width: 100%;
    border-top: 1px solid #EEE;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.filter-tag {
    margin: 5px;
    background-color: #EEE;
    font-size: 32rpx;
    padding: 8px 10px;
    border-radius: 2px;
    display: flex;
    align-items: center;
}

.filter-tag:after {
    content: '';
    position: relative;
    left: 4px;
    width: 32rpx;
    height: 32rpx;
    background: url(http://wx.wg-global.com/Public/images/cancel_icon.png) 0 0 no-repeat;
    background-size: 18px;
}

.filter-list-wrapper {
    display: flex;
    flex-direction: row;
    background-color: #FFF;
    text-align: center;
    border-top: 1px solid #EEE;
    margin-top: 8px;
}

.filter-list-wrapper>view {
    display: flex;
    flex-direction: column;
}

.filter-list-wrapper>.filter-list:first-child {
    min-width: 100px;
}

.filter-list text {
    padding: 10px;
    border-bottom: 1px solid #EEE;
    font-size: 32rpx;
}

.filter-scroll-view {
    height: 260px;
    border-left: 1px solid #EEE;
}

.filter-scroll-text {
    padding: 10px;
    border-bottom: 1px solid #EEE;
    font-size: 32rpx;
}

.filter-btns-wrapper {
    display: flex;
    flex-direction: row;
    padding: 10px;
    background-color: #fafafa;
    border-top: 1px solid #EEE;
}

.filter-btns-wrapper>button {
    width: 100%;
    font-size: 32rpx;
}

.filter-btns-wrapper>button:nth-child(2) {
    margin-left: 10px;
    background-color: #32B5D3;
}

