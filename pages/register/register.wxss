.register_input_container{
    display: flex;
    flex-direction: column;
    
    margin-top: 100rpx;
}

.phone_number_container{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.phone_hint{
    width:auto;
    text-align:right;
    line-height:30px;
    color:#0a0a0a;
    font-size:14px;
    font-weight:bold;
    margin-right:5px;
}
.phone_number_input{
    border:1px solid #3AA4F1;
    border-radius: 8rpx 0 0 8rpx;
    height: 30px;
    width:132px;
    padding:0 5px;
    text-align:center;
}

.send_verification_code_button{
    font-size:14px;
    height: 32px;
    line-height:32px;
    background-color: #3AA4F1;
