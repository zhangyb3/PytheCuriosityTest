
<import src="../common/question_answer_list_item.wxml" />

<template name="search_knowledge_list">


<!--列表-->
  <scroll-view wx:if="{{hide_knowledge_list == false}}" class="scroll_list"  scroll-y="true" upper-threshold="0px" lower-threshold="0px" style="height:{{scrollHeight}}px" bindscrolltolower="onLoadMore" bindscrolltoupper="onRefresh" >

    
      <block wx:for="{{infos}}" wx:for-item="item" wx:for-index="index" wx:key="unique">
        <!--<view class="interval"></view>-->
        <view class="question_answer_container" >
          <template is="question_answer_list_item" data="{{item,index,preview_img_url,alreadyRegister,recommend}}"></template>
        </view>
        <view class="interval"></view>
      </block>


    <view class="loadmore_view" wx:if="{{!netStateBean.loadmoreHidden && infos.length>8 }}" >
      {{netStateBean.loadmoreMsg}}
    </view>

  </scroll-view>


<!--</view>-->

</template>